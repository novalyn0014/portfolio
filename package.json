{
  "name": "upward_boilerplate",
  "version": "2.1.0",
  "description": "Upward Next Boilerplate for coding web pages",
  "author": "UPWARD NEXT INC",
  "license": "ISC",
  "scripts": {
    "build": "yarn gulp build --smap=false",
    "build:app": "yarn gulp buildApp --smap=false",
    "clean": "yarn clean:node && yarn clean:wp && rm -rf dist",
    "clean:node": "concurrently \"rm -rf node_modules\" \"rm -rf .cache\" \"rm -rf .parcel-cache\"",
    "clean:wp": "rm -rf wp-content",
    "close": "docker-compose down --remove-orphans",
    "close:delete": "docker-compose down --remove-orphans && docker volume prune",
    "dev": "yarn gulp dev",
    "dev:app": "yarn server:apache -d && yarn gulp buildApp && yarn gulp devApp",
    "dev:wp": "yarn server:apache -d && yarn gulp buildWp && yarn gulp devWp",
    "init:wp:all": "yarn init:wp:base && yarn init:wp:theme",
    "init:wp:base": "node scripts/addWordpress.mjs",
    "init:wp:theme": "node scripts/createWPtheme.mjs",
    "server:apache": "docker-compose -f docker-compose.yml -f docker-compose.apache.yml up",
    "server:nginx": "docker-compose -f docker-compose.yml -f docker-compose.nginx.yml up",
    "lint": "yarn gulp lint"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/preset-env": "^7.23.3",
    "@babel/preset-typescript": "^7.18.6",
    "@npmcli/fs": "^3.1.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.13",
    "babelify": "^10.0.0",
    "browser-sync": "^2.27.10",
    "browserify": "^17.0.0",
    "cli-progress": "^3.12.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.7",
    "eslint": "8.37.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "gulp": "^4.0.0",
    "gulp-clean": "^0.4.0",
    "gulp-cli": "^2.3.0",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^6.0.0",
    "gulp-postcss": "^9.0.1",
    "gulp-pug": "^5.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-terser": "^2.1.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "node-fetch": "^3.3.2",
    "node-sass": "^9.0.0",
    "postcss": "^8.4.21",
    "postcss-scss": "^4.0.6",
    "pre-commit": "^1.2.2",
    "pug": "^3.0.2",
    "readline-sync": "^1.4.10",
    "sass": "^1.58.3",
    "stylelint": "^14.0.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "tsify": "^5.0.4",
    "typescript": "5.0.2",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "yargs": "^17.7.2"
  },
  "precommit": {
    "run": "build"
  }
}
